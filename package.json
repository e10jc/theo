    "detect-node": "^2.0.3",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.8.0",
    "graphql-tools": "^2.23.1",
    "knex": "^0.14.4",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-favicon": "^2.0.1",
    "koa-router": "^7.4.0",
    "mysql2": "^1.5.3",
    "next": "^5.0.0",
    "node-fetch": "^2.1.1",
    "objection": "^1.0.0",
    "react": "^16.2.0",
    "react-apollo": "^2.1.0",
    "react-dom": "^16.2.0",
    "react-portal": "^4.1.4",
    "styled-components": "^3.2.3"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "@zeit/next-typescript": "0.0.10",
    "babel-plugin-styled-components": "^1.5.1",
    "cross-env": "^5.1.4",
    "jest": "^22.4.3",
    "knex-migrate": "^1.5.1",
    "nodemon": "^1.17.2",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2",
    "webpack": "^4.1.1"
  },
  "scripts": {
    "lint": "tslint -c tslint.json \"**/*.{ts,tsx}\"",
    "test": "jest",
    "dev": "cross-env NODE_ENV=development nodemon server.ts",
    "build": "next build && tsc --project tsconfig.server.json",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node .server/server.js"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globalSetup": "<rootDir>/jest-setup.js"
  }
}
